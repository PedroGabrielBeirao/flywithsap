<mvc:View xmlns:core="sap.ui.core" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m"
xmlns:uxap="sap.uxap"
xmlns:layout="sap.ui.layout"
controllerName="pt.procensus.FlyWithSapApp.controller.Details"
>

<uxap:ObjectPageLayout id="detailsLayout"  
	showTitleInHeaderContent="true" 
	showAnchorBar="false" 
	enableLazyLoading="true"> 

<!-- DETAIL HEADER SECTION -->
	<uxap:headerTitle id = "detailsHeaderTitle Section">
			<uxap:ObjectPageHeader id="detailsHeader"
				objectImageURI="sap-icon://tags"
				objectImageShape="Circle"
				objectImageAlt="flight infos"
				isObjectIconAlwaysVisible="false"
				objectTitle="FlightID"
				isObjectTitleAlwaysVisible="false"
				objectSubtitle="{CompanhiaAerea}" 
				isObjectSubtitleAlwaysVisible="false"
				isActionAreaAlwaysVisible="true"
				>
			<uxap:actions>
					<Button icon="sap-icon://home" text="Back" type="Transparent"  width="auto" press="onNavBack"/>
				</uxap:actions>
			</uxap:ObjectPageHeader>
		</uxap:headerTitle> 
		
<!-- SECTIONS -->
<uxap:sections id="sections">
	
	<!-- first section FROM -->
	<uxap:ObjectPageSection showTitle="true" title="Page Section Title" titleUppercase="false" visible="true" class="sapUiTinyMargin">
		<uxap:subSections>
				<uxap:ObjectPageSubSection title="From..." mode="Expanded" class="sapUiTinyMargin">
					<uxap:blocks>
						<HBox fitContainer="true" width="auto" alignItems="Center" direction="Row"	justifyContent="Start">
								<items>
									<VBox width="33.3%" alignItems="Center" direction="Column" justifyContent="End">
										<items>
											<Title text="Lisboa" titleStyle="H2" textAlign="Begin" class="sapUiTinyMargin"/>
											<Label text="Portugal" textAlign="Begin"/>
										</items>
									</VBox>
									<VBox width="33.3%" alignItems="Center" direction="Column" justifyContent="End">
										<items>
											<Title text="8:00:00 AM" titleStyle="H3" textAlign="Begin" class="sapUiSmallMargin"/>
										</items>
									</VBox>
									<VBox width="33.3%" alignItems="Center" direction="Column" justifyContent="End">
										<items>
											<Title text="{DataVoo}" textAlign="Begin" class="sapUiSmallMargin"/>
										</items>
									</VBox>
								</items>
							</HBox>
						</uxap:blocks>
				</uxap:ObjectPageSubSection>
		</uxap:subSections>
	</uxap:ObjectPageSection>
	
	<!-- second section TO -->
		<uxap:ObjectPageSection showTitle="true" title="Page Section Title" titleUppercase="false" visible="true" class="sapUiTinyMargin">
		<uxap:subSections>
				<uxap:ObjectPageSubSection title="From..." mode="Expanded" class="sapUiTinyMargin">
					<uxap:blocks>
						<HBox fitContainer="true" width="auto" alignItems="Center" direction="Row"	justifyContent="Start">
								<items>
									<VBox width="33.3%" alignItems="Center" direction="Column" justifyContent="End">
										<items>
											<Title text="Lisboa" titleStyle="H2" textAlign="Begin" class="sapUiTinyMargin"/>
											<Label text="Portugal" textAlign="Begin"/>
										</items>
									</VBox>
									<VBox width="33.3%" alignItems="Center" direction="Column" justifyContent="End">
										<items>
											<Title text="8:00:00 AM" titleStyle="H3" textAlign="Begin" class="sapUiSmallMargin"/>
										</items>
									</VBox>
									<VBox width="33.3%" alignItems="Center" direction="Column" justifyContent="End">
										<items>
											<VBox width ="auto" alignItems="Center" direction="Column" justifyContent="End">
												<items>
												<Title text="12/15/2020" textAlign="Begin" class="sapUiSmallMargin"/>
												<ObjectAttribute title="Arrive in" text="2 days"/>
												</items>
											</VBox>
										</items>
									</VBox>
								</items>
							</HBox>
						</uxap:blocks>
				</uxap:ObjectPageSubSection>
		</uxap:subSections>
	</uxap:ObjectPageSection>
<!-- SECTION DETAILS -->
	<uxap:ObjectPageSection showTitle="true" title="Detalhes" titleUppercase="true">
				<uxap:subSections>
					<uxap:ObjectPageSubSection mode="Expanded">
						<uxap:blocks>
							<HBox fitContainer="true" width="auto" height="auto" alignItems="Center" direction="Row"	justifyContent="Start">
										<items>
													<VBox width ="50%" alignItems="Center" direction="Column" justifyContent="End" >
														<items>
															<ObjectHeader 
																intro="Classe Económica" 
																title="Preço" 
																icon="sap-icon://travel-expense"
																number="544" 
																responsive="true"
																fullScreenOptimized="true"
																numberUnit="EUR">
															</ObjectHeader>
	
															<ObjectHeader intro="Reservas" title="Disponíveis" icon="sap-icon://lateness"
															number="15" numberUnit="Lugares"
															responsive="true"
																fullScreenOptimized="true"
															numberState="Warning">
														</ObjectHeader>
												</items>
											</VBox>
											<VBox width="40%">
												<items>
													<List>
														<infoToolbar>
															<Toolbar width="100%" height="auto"  visible="false" enabled="true">
																<content>
																	<Label text="Label" />
																</content>
															</Toolbar>
														</infoToolbar>
														<headerToolbar>
															<Toolbar enabled="true" visible="false" >
																<content>
																	<SearchField placeholder="Search" showSearchButton="true"  width="100%"/>
																</content>
															</Toolbar>
														</headerToolbar>
														<items>
															<DisplayListItem label="Origem" value="Lisboa"  type="Inactive" selected="false"/>
															<DisplayListItem label="Partida" value="8:00:00 AM"  type="Inactive"/>
															<DisplayListItem label="Destino" value="Porto"  type="Inactive" />
															<DisplayListItem label="Chegada" value="12:00:00 PM"  type="Inactive" selected="false"/>
															<DisplayListItem label="Dias Após" value="2" type="Inactive"/>
															<DisplayListItem label="Preço" value="455" type="Inactive" />
															<DisplayListItem label="Moeda" value="EUR"  type="Inactive" selected="false"/>
														</items>
													</List>
													<Toolbar>
														<content>
															<ToolbarSpacer width=""/>
															<Button text="Finalizar Reserva" type="Emphasized"/>
															<Button text="Não tenho registo" type="Default"/>
															</content>
													</Toolbar>
												</items>
											</VBox>
										</items>
							</HBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

</uxap:sections>
</uxap:ObjectPageLayout>
</mvc:View>